  </resultMap>
  <!-- ============================================================= -->
  <select id="selectMenuListByUserId" resultMap="UserMenuMap">
    select distinct
      pi.*,ur.user_id userId
    from
	  u_permission_info pi
    left join
	  u_role_permission rp
    on
	  pi.id = rp.permission_id
    left join
	  u_user_role ur
    on
	  ur.role_id = rp.role_id
    where  pi.type='menu' and ur.user_id = #{userId} and pi.parent_id = #{parentId}
  </select>



  <select id="selectURLByUserId" resultType="java.lang.String">
    select
      pi.url
    from
	  u_permission_info pi
    left join
	  u_role_permission rp
    on
	  pi.id = rp.permission_id
    left join
	  u_user_role ur
    on
	  ur.role_id = rp.role_id
    where
     ur.user_id = #{userId} and pi.url is not null
  </select>



